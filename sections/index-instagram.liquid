<div class="container {% if section.settings.inverted %}inverted{% endif %}"> 
	<div class="instagram_feed swiper-container">
		{% if section.settings.title.size > 0 %}
				<h2 class="section_heading">{{ section.settings.title | escape }} <i>{{ section.settings.nick }}</i></h2>
		{% endif %}

		<div id="instafeed_{{ section.id }}" class="instafeed_wrap swiper-wrapper" data-user="{{ section.settings.instagram_user_id }}" data-token="{{ section.settings.instagram_access_token }}" data-limit="{{ section.settings.instagram_img_number }}"></div>
		
		<div id="instagram_prev_{{ section.id }}" class="swiper_btn instagram_btn__prev"></div>
		<div id="instagram_next_{{ section.id }}" class="swiper_btn instagram_btn__next"></div>
	</div>
</div>

{% if section.settings.section_bg_color.size > 0 and section.settings.section_bg_color != 'rgba(0,0,0,0)' %}
	<style>
		{% if section.settings.boxed_style %}
			#shopify-section-{{ section.id }} .container {background-color: {{ section.settings.section_bg_color }};}
		{% else %}
			#shopify-section-{{ section.id }}.section_instagram {background-color: {{ section.settings.section_bg_color }};}
		{% endif %}
	</style>	
{% endif %}

